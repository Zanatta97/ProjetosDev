<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtTituloSMS"
        android:textSize="35sp"
        android:layout_margin="25sp"
        android:gravity="center"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="25sp"
        android:hint="@string/txtHintTelefone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/edMensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:lines="4"
        android:layout_margin="25sp"
        android:gravity="start|top"
        android:hint="@string/txtHintMensagem"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnEnviar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:background="#009688"
        android:text="@string/btnEnviarSMS"
        android:textColor="#F7F6F6" />
</LinearLayout>